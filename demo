import { NavLink, Route, Routes, useNavigate } from 'react-router-dom'
import Home from './pages/Home.jsx'
import About from './pages/About.jsx'
import CustomersList from './pages/CustomersList.jsx'
import CustomerDetails from './pages/CustomerDetails.jsx'
import CustomerForm from './pages/CustomerForm.jsx'
import { seedIfEmpty } from './utils/storage.js'
import './index.css'

export default function App(){
  const navigate = useNavigate()
  seedIfEmpty()

  return (
    <>
      <header className="brandbar">
        <div className="container" style={{paddingTop:0,paddingBottom:0}}>
          <nav>
            <ul>
              <div className="title">TopGuns Bank</div>
              <li><NavLink to="/" end>Home</NavLink></li>
              <li><NavLink to="/customers">Customers</NavLink></li>
              <li><NavLink to="/about">About</NavLink></li>
              <li><a href="#" onClick={(e)=>{e.preventDefault(); alert('SCB: Secure Customer Base console');}}>SCB</a></li>
              <li style={{marginLeft:'auto'}}>
                <button className="btn success" onClick={()=>navigate('/customers/new')}>Create new customer</button>
              </li>
            </ul>
          </nav>
        </div>
      </header>

      <main className="container">
        <Routes>
          <Route path="/" element={<Home/>} />
          <Route path="/about" element={<About/>} />
          <Route path="/customers" element={<CustomersList/>} />
          <Route path="/customers/new" element={<CustomerForm/>} />
          <Route path="/customers/:id" element={<CustomerDetails/>} />
          <Route path="/customers/:id/edit" element={<CustomerForm/>} />
        </Routes>
      </main>
    </>
  )
}