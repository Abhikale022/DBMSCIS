import React, { useState } from "react";
import checkNumber from "../services/NumberService"; // now a function, not a class

const NumberForm = () => {
  const [num, setNum] = useState("");
  const [result, setResult] = useState(null);

  const handleSubmit = async (e) => {
    e.preventDefault();
    try {
      const response = await checkNumber(num);
      setResult(response.data.message); // "yes" or "no"
    } catch (error) {
      if (error.response && error.response.data) {
        setResult(error.response.data.message); // "no"
      } else {
        setResult("Server error");
      }
    }
  };

  return (
    <div style={{ textAlign: "center", marginTop: "50px" }}>
      <h2>Check if number is multiple of 5</h2>
      <form onSubmit={handleSubmit}>
        <input
          type="number"
          value={num}
          onChange={(e) => setNum(e.target.value)}
          placeholder="Enter number"
          required
        />
        <button type="submit">Check</button>
      </form>
      {result && <h3>Result: {result}</h3>}
    </div>
  );
};

export default NumberForm;
