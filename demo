import React, { useState } from "react";
import LocationService from "../services/LocationService";

function PincodeSearch() {
  const [pincode, setPincode] = useState("");
  const [result, setResult] = useState(null);

  const handleSearch = () => {
    LocationService.getLocationByPincode(pincode)
      .then((response) => {
        setResult(response.data);
      })
      .catch(() => {
        setResult(null);
        alert("No location found for this pincode!");
      });
  };

  return (
    <div>
      <h2>Search by Pincode</h2>
      <input
        type="text"
        value={pincode}
        onChange={(e) => setPincode(e.target.value)}
        placeholder="Enter Pincode"
      />
      <button onClick={handleSearch}>Search</button>

      {result && (
        <div>
          <p><b>City:</b> {result.city}</p>
          <p><b>Area:</b> {result.area}</p>
          <p><b>Pincode:</b> {result.pincode}</p>
        </div>
      )}
    </div>
  );
}

export default PincodeSearch;