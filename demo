import java.util.Scanner;
import java.util.Random;

class Customer {
    int customerId;
    String name;
    String email;
    String contact;
    String accountType;

    // Constructor
    public Customer(String name, String email, String contact, String accountType) {
        Random rand = new Random();
        this.customerId = rand.nextInt(9000) + 1000; // 4-digit random ID
        this.name = name;
        this.email = email;
        this.contact = contact;
        this.accountType = accountType;
    }

    @Override
    public String toString() {
        return "Customer Id = " + customerId +
                ", Customer name = " + name +
                ", Customer email = " + email +
                ", Customer contact = " + contact +
                ", Account type = " + accountType;
    }
}

public class BankApplication {
    static Customer[] customers = new Customer[100]; // Fixed size array
    static int count = 0; // Keeps track of number of customers
    static Scanner sc = new Scanner(System.in);

    // Add Customer
    public static void addCustomer() {
        if (count >= customers.length) {
            System.out.println("Customer list is full. Cannot add more customers.");
            return;
        }
        System.out.println("Please enter customer details :");
        System.out.print("Enter name : ");
        String name = sc.nextLine();
        System.out.print("Enter email : ");
        String email = sc.nextLine();
        System.out.print("Enter contact : ");
        String contact = sc.nextLine();
        System.out.print("Enter account type (Savings or Current): ");
        String accountType = sc.nextLine();

        Customer c = new Customer(name, email, contact, accountType);
        customers[count] = c;
        count++;
        System.out.println("Customer added successfully with customer id " + c.customerId);
    }

    // Display Customers
    public static void displayCustomers() {
        if (count == 0) {
            System.out.println("No customers found.");
        } else {
            for (int i = 0; i < count; i++) {
                System.out.println(customers[i]);
            }
        }
    }

    // Search Customer
    public static void searchCustomer() {
        System.out.print("Please enter customer id : ");
        int id = sc.nextInt();
        sc.nextLine(); // clear buffer

        boolean found = false;
        for (int i = 0; i < count; i++) {
            if (customers[i].customerId == id) {
                System.out.println(customers[i]);
                found = true;
                break;
            }
        }
        if (!found) {
            System.out.println("Customer not found.");
        }
    }

    // Delete Customer
    public static void deleteCustomer() {
        System.out.print("Please enter customer id to delete: ");
        int id = sc.nextInt();
        sc.nextLine(); // clear buffer

        boolean deleted = false;
        for (int i = 0; i < count; i++) {
            if (customers[i].customerId == id) {
                // Shift all customers to left
                for (int j = i; j < count - 1; j++) {
                    customers[j] = customers[j + 1];
                }
                customers[count - 1] = null; // last becomes null
                count--;
                deleted = true;
                System.out.println("Customer deleted successfully.");
                break;
            }
        }
        if (!deleted) {
            System.out.println("Customer not found.");
        }
    }

    public static void main(String[] args) {
        int choice;
        do {
            System.out.println("\nWelcome to Standard Chartered Bank");
            System.out.println("Please enter your choice");
            System.out.println("1 for Add new Customer");
            System.out.println("2 for Display Customers");
            System.out.println("3 for Search Customer");
            System.out.println("4 for Delete Customer");
            System.out.println("5 for Exit the bank application");

            choice = sc.nextInt();
            sc.nextLine(); // clear buffer

            switch (choice) {
                case 1 -> addCustomer();
                case 2 -> displayCustomers();
                case 3 -> searchCustomer();
                case 4 -> deleteCustomer();
                case 5 -> System.out.println("Exiting application...");
                default -> System.out.println("Invalid choice. Please try again.");
            }
        } while (choice != 5);
    }
}